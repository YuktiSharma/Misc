#include <iostream>
using namespace std;

int main() {
	// your code goes here
		int arr[1001];
	int t,n,k,i,count=0;
	cin>>t;
	for(i=0;i<t;i++)
	{
	    cin>>n>>k;
	    for(i=0;i<n;i++)
	    {
	        cin>>arr[i];
	    }
	    for(int i=0;i<n;i++)
	    {
	    while(arr[i]>2)
{
  arr[i]=arr[i]-3; 
  count++;
}	
if(arr[i]!=0)
count++;
	}
	
	cout<< count;
	}

	return 0;
}
