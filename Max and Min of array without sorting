#include<stdio.h>
void main()
{
int a[20],max,min,size,i;
printf("\nenter size of array");
scanf("%d",&size);
printf("\nenter the array");
for(i=0;i<size;i++)
{
scanf("%d",&a[i]);
}
max=a[0];
min=a[0];
for(i=1;i<size;i++)
{
if(a[i]>max)
max=a[i];
else
if(a[i]<min)
min=a[i];
}
printf("the max num of array is %d and min is %d",max,min);
}
