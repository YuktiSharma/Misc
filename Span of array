#include <iostream>
#include<stdlib.h>
using namespace std;

int main() {
	// your code goes here
	int a[100];
	int i,n,temp,j,span=0;
	cin>>n;
	for(i=0;i<n;i++)
	{
	    cin>>a[i];
	}
	for(i=0;i<n;i++)
	{
	    for(j=0;j<n;j++)
	    {
	        if(a[i]<a[j])
	        {
	        temp=a[i];
	        a[i]=a[j];
	        a[j]=temp;
	        }
	    }
	   
	    
	}
span = a[n-1]-a[0];
cout<<"span:"<<span;
	
	return 0;

}
